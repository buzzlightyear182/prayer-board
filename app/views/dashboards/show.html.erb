<div class="row">
  <div class="col-xs-12 col-sm-4">
    <div class="well">
      <h3 style="margin-top:0px;">Post a new prayer request</h3>
      <%= form_for @dashboard.new_prayer do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, required: true, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "content" %>
        <%= f.text_area :body, placeholder: 'Write your stuff here', required: true, :class => "form-control", rows: 4 %>
      </div>
        <%= f.submit 'Post!', :class => 'btn btn-primary btn-xl' %>
      <% end %>
    </div>
  </div>
<!-- </div> -->

<!-- <div class="row"> -->
  <div class="col-xs-12 col-sm-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Pending</h3>
      </div>
      <div class="panel-body">
          <%= render @dashboard.prayers false %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Answered</h3>
      </div>
      <div class="panel-body">
        <%= render @dashboard.prayers true %>
      </div>
    </div>
  </div>
</div>
