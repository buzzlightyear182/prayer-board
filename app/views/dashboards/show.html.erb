<div class="row">
  <div class="col-xs-6 col-sm-4">
    <div class="well">
      <h3 style="margin-top:0px;">Post a new prayer request</h3>
      <%= form_for @dashboard.new_prayer do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.text_area :body, placeholder: 'Write your stuff here', required: true, :class => "form-control", rows: 4 %><br/>
        <%= f.submit 'Post!', :class => 'btn btn-primary btn-xl' %>
      <% end %>
    </div>
  </div>
